doctype
head
  title ProQuiz
  style
    body {
      padding: 50px;
      font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
      color: #444;
    }

    a {
      color: #00B7FF;
    }

    span {
      margin: 0;
      padding: 0;
      border: 0;
    }

    pre, code, tt {
      font-size: 12px;
      font-family: Consolas, "Liberation Mono", Courier, monospace;
    }

    code {
      margin: 0 2px;
      padding: 0px 5px;
      border: 1px solid #EAEAEA;
      background-color: #F8F8F8;
      border-radius: 3px;
    }

    pre {
      background-color: #F8F8F8;
      border: 1px solid #CCC;
      font-size: 13px;
      line-height: 19px;
      overflow: auto;
      padding: 6px 10px;
      border-radius: 3px;
    }

    .in {
      color: red;
    }

    .out {
      color: black;
    }

    table {
      border-collapse: collapse;
      width: 80%;
    }

    th {
      border-bottom: 2px solid black;
      padding: 8px;
    }

    td {
      border-bottom: 1px solid #888;
    }

    tbody tr:hover {
      background-color: #ccc;
    }

    td.data {
      /*border: 1px solid black;*/
      padding: 12px;
      min-width: 80px;
    }

    td.name {
      font-weight: bold;
      text-align: right;
      padding: 8px;
    }

    .pass {
      background-color: #c5ffc5;
    }
    .fail {
      background-color: #FFC6BE;
    }
    .meh {
      /*background-color: whitesmoke;*/
    }

